{
  "name": "o18n",
  "version": "1.0.0",
  "description": "Componentization your i18n file",
  "main": "dist/index.js",
  "scripts": {
    "start": "WEBPACK_ENV=dev webpack-dev-server --config webpack.config.dev.babel.js --progress --colors --watch",
    "test": "jest",
    "coveralls": "jest",
    "coverage": "npm test -- --coverage",
		"coveralls": "jest --coverage --coverageReporters=text-lcov | coveralls",
    "test:watch": "npm test -- --watchAll",
    "coverage:watch": "npm test -- --coverage --watchAll",
    "cypress:open": "cypress open",
    "codecov": "codecov -f coverage/coverage-final.json"
  },
  "keywords": [
    "i18n",
    "Componentization",
    "localize"
  ],
  "author": "sexyoung",
  "license": "ISC",
  "devDependencies": {
    "babel": "^6.23.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.6",
    "babel-loader": "^7.1.5",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "chai": "^4.1.2",
    "codecov": "^3.0.4",
    "coveralls": "^3.0.2",
    "cypress": "^3.0.3",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.2.0",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-loader": "^2.1.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.10.0",
    "jest": "^23.4.2",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "webpack": "^4.16.2",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.5"
  },
  "dependencies": {
    "deepmerge": "^2.1.1"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/*.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>[/\\\\](build|cypress|node_modules)[/\\\\]"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
